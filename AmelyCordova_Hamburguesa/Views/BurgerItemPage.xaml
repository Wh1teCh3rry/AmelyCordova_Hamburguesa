<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AmelyCordova_Hamburguesa.Views.BurgerItemPage"
             xmlns:models="clr-namespace:AmelyCordova_Hamburguesa.Models"             Title="Amely Córdova BurgerItemPage">
    <ScrollView>
        <VerticalStackLayout Padding="20"
            Spacing="10"
            VerticalOptions="StartAndExpand">
            <Label Text="AC_Nombre" />
            <Entry x:Name="ACnameB" Text="{Binding Name}" />
            <Label Text="AC_Descripción" />
            <Entry x:Name="ACdescB" Text="{Binding Description}" />
            <Label Text="AC_¿Con queso extra?" />
            <CheckBox x:Name="ACcheck"
            CheckedChanged="AC_OnCheckBoxCheckedChanged" />
            <Button Text="AC_Guardar"
            Clicked="AC_OnSaveClicked" />
            <Button Text="AC_Cancelar"
            Clicked="AC_OnCancelClicked" />
            </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>